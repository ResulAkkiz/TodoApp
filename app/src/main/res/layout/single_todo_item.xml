<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView

            android:id="@+id/circleTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/text_order_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_serif"
                android:text="Task 1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/todoDescriptipn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_serif"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin velit magna, dignissim eget cursus nec, aliquet a leo. Proin mauris nisl, suscipit at turpis sodales, aliquet sodales libero."
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <CheckBox
                android:id="@+id/todoCheckBox"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="36dp"
                android:layout_weight="1"
                android:layout_height="36dp"

                app:srcCompat="@drawable/baseline_delete_outline_24" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#82B1FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>